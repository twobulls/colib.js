{
  "name": "colib-js",
  "version": "0.0.0-development",
  "description": "Tweening and logic sequencing for typescript",
  "repository": {
    "type": "git",
    "url": "https://github.com/twobulls/colib-js.git"
  },
  "license": "Apache-2.0",
  "main": "dist/index.min.js",
  "module": "dist/index.min.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build-watch": "$(yarn bin)/supervisor -n success -w src,package.json,rollup.config.js,tsconfig.json -e ts -x bash ./scripts/build-watch.sh",
    "build": "./scripts/build.sh",
    "test-watch": "$(yarn bin)/jest --watch",
    "check-licenses": "./scripts/check-licenses.sh",
    "test": "$(yarn bin)/jest",
    "lint": "$(yarn bin)/tslint --project tslint.json",
    "semantic-release": "$(yarn bin)/semantic-release",
    "commit": "$(yarn bin)/git-cz"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.10",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "danger": "^6.1.12",
    "danger-plugin-istanbul-coverage": "^1.6.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "license-checker": "^24.0.1",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "rollup": "^0.67.4",
    "rollup-plugin-typescript2": "^0.18.1",
    "semantic-release": "^15.12.4",
    "supervisor": "^0.12.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageReporters": [
      "json-summary",
      "json",
      "lcov"
    ],
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(src\\/).*(\\.spec\\.ts)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**.ts",
      "!src/**/index.ts"
    ]
  },
  "publishConfig": {
    "access": "restricted"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/precommit.sh",
      "commit-msg": "$(yarn bin)/commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
